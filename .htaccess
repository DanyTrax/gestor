# Configurar tipos MIME correctos para archivos estáticos (PRIMERO)
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType application/javascript js
  AddType text/css .css
  AddType text/css css
  AddType image/svg+xml .svg
  AddType image/svg+xml svg
  AddType application/json .json
  AddType application/json json
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # CRÍTICO: Excluir /assets/ ANTES de cualquier otra regla
  # Esto previene que los archivos estáticos sean reescritos a index.html
  RewriteCond %{REQUEST_URI} ^/assets/
  RewriteRule ^ - [L]
  
  # Excluir archivos estáticos por extensión
  RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|json|map)$ [OR]
  RewriteCond %{REQUEST_URI} send-email\.php [OR]
  RewriteCond %{REQUEST_URI} send-zoho\.php [OR]
  RewriteCond %{REQUEST_URI} upload\.php
  RewriteRule ^ - [L]
  
  # Regla para evitar que los archivos y directorios existentes sean reescritos
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  # Si la solicitud no es un archivo o directorio real, redirige a index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Headers adicionales para archivos estáticos
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css)$">
    Header set Content-Type "application/javascript; charset=utf-8"
  </FilesMatch>
  <FilesMatch "\.css$">
    Header set Content-Type "text/css; charset=utf-8"
  </FilesMatch>
</IfModule>