RewriteEngine On

# Si el archivo o directorio existe en la raíz, sírvelo normalmente
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirige la raíz al index de dist
RewriteRule ^$ dist/index.html [L]

# Si la ruta no apunta a dist, reescribe para servir desde dist/
RewriteCond %{REQUEST_URI} !^/dist/
RewriteRule ^(.*)$ dist/$1 [L]

# Tipos MIME básicos por si el servidor no los define
AddType application/javascript .js .mjs
AddType text/css .css
AddType image/svg+xml .svg

